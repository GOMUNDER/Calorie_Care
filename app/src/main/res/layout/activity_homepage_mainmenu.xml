<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage_mainmenu"
    android:orientation="vertical"
    android:background="@color/purple_700"
    android:id="@+id/homepage_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            app:srcCompat="@drawable/menu"
            app:tint="@color/white"
            android:paddingEnd="125dp"/>

        <ImageView
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            app:srcCompat="@drawable/user"
            app:tint="@color/white"
            android:paddingStart="125dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cpb_background_progressbar_color="#ffffff"
                app:cpb_background_progressbar_width="1dp"
                app:cpb_progress="45"
                app:cpb_progressbar_color="@color/white"
                app:cpb_progressbar_width="5dp" />


            <TextView
                android:id="@+id/txtProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="45%"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textSize="@dimen/xxlarge_text_size" />

        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calories"
                android:textColor="@color/whiteTextCoor"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/whiteTextCoor"
                android:textSize="36sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="of 160"
                android:textColor="@color/whiteTextCoor"
                android:textSize="@dimen/xlarge_text_size" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/ic_runer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_runer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/ic_runer"
            android:text="Running"
            android:textColor="@color/white"
            android:textSize="@dimen/xlarge_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="5.55 km"
            android:textColor="@color/colorWistful"
            android:textSize="@dimen/xlarge_text_size" />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/breakfast"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            app:srcCompat="@drawable/breakfast"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/breakfast_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Breakfast"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:letterSpacing="0.1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/lunch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            app:srcCompat="@drawable/noodle"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/lunch_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Lunch"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:letterSpacing="0.1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/dinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            app:srcCompat="@drawable/salad"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/dinner_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:letterSpacing="0.1"
            android:text="Dinner"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/snack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            app:srcCompat="@drawable/icecream"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/snack_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Snack"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:letterSpacing="0.1"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/diary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:srcCompat="@drawable/notes"
            app:tint="@color/white"/>

        <ImageView
            android:id="@+id/diet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:srcCompat="@drawable/sendokgrapu"
            app:tint="@color/white"/>

        <ImageView
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:srcCompat="@drawable/camera"
            app:tint="@color/white"
            />

        <ImageView
            android:id="@+id/exercise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:srcCompat="@drawable/dumbbell"
            app:tint="@color/white" />


    </LinearLayout>

</LinearLayout>